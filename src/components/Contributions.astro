---
type Contribution = {
    title: string;
    description: string;
    link?: string; // opcional si hay repositorio o demo
};

export const CONTRIBUTIONS: Contribution[] = [
    {
        title: "SDK de Facturación Electrónica SIFEN",
        description:
            "Desarrollo de SDK completo en PHP para facturación electrónica en Paraguay, incluyendo firma digital, envío asíncrono, notificaciones y cancelaciones.",
    },
    {
        title: "Vanilla Recaptcha V3",
        description:
            "Una librería en JavaScript para integrar Google reCAPTCHA v3 en proyectos frontend, diseñada para facilitar la obtención de los tokens de verificación cuando se ejecuta una acción.",
        link: "https://www.npmjs.com/package/vanilla-recaptcha-v3",
    },
    {
        title: "Vue Imagen Drag",
        description:
            "Es un componente para la carga y previsualización de imágenes, que se cargan desde el sistema de archivos o arrastrando la imagen al area de carga.",
        link: "https://www.npmjs.com/package/vue-imagen-drag",
    },
    {
        title: "React Invisible Captcha",
        description:
            "Hook para utilización de recaptcha en frontend de manera invisible y sin interacciones con el usuario.",
        link: "https://www.npmjs.com/package/react-invisible-captcha-v3",
    },
    {
        title: "Plexo SDK",
        description:
            "Librería fork de implementación de la red de pagos Plexo, con mejoras significativas y actualizaciones.",
        link: "https://packagist.org/packages/cienty/plexo-sdk",
    },
    {
        title: "Sugar Labs",
        description:
            "Contribución con las actividades de la organización en Paraguay, incluyendo ser mentor 'ad honorem' en la competencia Google CodeIn 2016-2018.",
    },
];
---

<div class="my-12 mx-auto px-4">
    <div class="lg:w-[740px] mb-4">
        <h2
            class="text-3xl font-semibold flex gap-x-3 text-black/80 dark:text-white/80"
        >
            <!-- <CodeIcon class="size-7" /> -->
            Librerias & Contribuciones
        </h2>
        <p class="mb-8">Algunos desarrollos propios y contribuciones a la comunidad.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
            CONTRIBUTIONS.map((contribution) => (
                <div class="project-card bg-gray-900 border border-white/10 rounded-xl p-6 shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2">
                    <h3 class="text-xl font-semibold mb-3 text-yellow-400">
                        {contribution.title}
                    </h3>
                    <p class="text-gray-300 mb-4">{contribution.description}</p>
                    {contribution.link && (
                        <a
                            href={contribution.link}
                            target="_blank"
                            class="text-blue-400 hover:underline font-medium"
                        >
                            Ver más
                        </a>
                    )}
                </div>
            ))
        }
    </div>
</div>
