---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import ContactoIcons from "../components/ContactoIcons.astro";
import Contacto from "../components/Contacto.astro";
import WhatsappButton from "../components/WhatsappButton.astro";
import Presentation from "../sections/Presentation.astro";
import SobreMi from "../sections/SobreMi.astro";
---

<script src="../scripts/showSection"></script>
<script src="../scripts/matrix"></script>

<style>
  #Matrix {
    position: absolute;
    z-index: -2;
    opacity: 40%;
    -webkit-mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    width: 100vw;
    max-height: 100vh;
  }
  body {
    overflow-x: hidden;
  }
</style>
<Layout
  title="José A. Argüello - Desarrollador Senior"
  description="Contrata a José para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones únicas."
>
  <canvas id="Matrix"></canvas>
  <main class="px-4 fullpage">
    <SectionContainer id="inicio" fullpage verticalCenter>
      <Presentation />
    </SectionContainer>

    <SectionContainer id="sobre-mi" fullpage verticalCenter>
      <SobreMi />
    </SectionContainer>

    <SectionContainer id="experiencia" fullpage verticalCenter>
      <div class="lg:pt-20 mt-10">
        <h2
          class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
        >
          <Briefcase class="size-7" />
          Experiencia
        </h2>
        <Experience />
      </div>
    </SectionContainer>

    <SectionContainer id="proyectos" container class="">
      <div class="lg:pt-20 mt-10">
        <div class="lg:w-[740px] mx-auto mb-4">
          <h2
            class="text-3xl font-semibold flex gap-x-3 items-center text-black/80 dark:text-white/80"
          >
            <CodeIcon class="size-7" />
            Es una parte de mi portafolio
          </h2>
          <p class="mb-8">
            Te muestro algunos proyectos que confiaron en mis habilidades y
            contribuciones.
          </p>
        </div>
        <Projects />
      </div>
    </SectionContainer>

    <SectionContainer container id="contacto">
      <div class="grid grid-cols-3 grap-4">
        <div class="px-4 text-balance">
          <h2
            class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
          >
            <CodeIcon class="size-7" />
            Contacto
          </h2>
          <p data-aos="zoom-in-down">
            Si tu empresa, startup o equipo necesita reforzar su desarrollo web
            o backend, te ofrezco colaboración profesional con foco en
            soluciones eficientes, código limpio y entregas a tiempo.
          </p>
          <br />
          <p data-aos="zoom-in-down" data-aos-delay="200">
            Trabajo con modelos flexibles: fee mensual, banco de horas o por
            proyecto. Completá el formulario y hablemos.
          </p>
        </div>
        <div class="col-span-2">
          <Contacto />
          <ContactoIcons class="text-center justify-center" />
        </div>
      </div>
    </SectionContainer>
    <WhatsappButton />
  </main>
</Layout>
